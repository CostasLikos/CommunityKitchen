<script>
    document.getElementById("contact-form").addEventListener("keyup", function () {
        var name = document.getElementById('reqname').value;
        var mail = document.getElementById('reqmail').value;
        var message = document.getElementById('reqmessage').value;
        if (name !== '' && mail !== '' && message !== '') {
            document.getElementById('butt').removeAttribute("disabled");
        } else {
            document.getElementById('butt').setAttribute("disabled", null);
        }
    });
</script>


