@model IEnumerable<Entities.Event>

@{
    ViewBag.Title = "OrganizeEvents";
}



<!--start upcoming-event-->
<section class="all-event">
    <div class="container">
        <div class="section-title">
            <h5>going to raise humanity</h5>
            <h1>upcoming <span>event</span></h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,</p>
        </div>


        <div class="item-list">
            <div class="item wow fadeInUp animated" style="visibility: visible; animation-name: fadeInUp;">
                <div class="bg-area">
                    <div class="image-box">
                        <img src="~/Assets/Selection/events1.jpg" />
                        <div class="overlay">
                            <div class="box">

                            </div>
                        </div>
                    </div>

                    @* align-content *@
                    @* align-items *@
                    @* justify-content *@
                    @* justify-items *@
                    <div class="content-box">
                        @foreach (var eve in Model.OrderBy(x => x.EventDate))
                        {

                            if (eve.EventDate >= DateTime.Now)
                            {


                                <div class="title-area ">
                                    <div class="flex-container;">


                                        @if (eve.Photo == null)
                                        {
                                            <div style="display:hidden"></div>
                                        }
                                        else
                                        {
                                            <div>
                                                <img style="border-radius: 50px; height: 432px; width: 768px; object-fit: contain; " src="~/Assets/images/ImagesSaved/@eve.Photo" alt="Defortwse re mLKAIA Text" />
                                            </div>
                                        }

                                        <div>
                                            <a href="@Url.Action("EventDetails","Event",new {id = @eve.Id})"> <h3 class="RedTitle">@eve.Title</h3></a>
                                        </div>


                                        <div class="date">
                                            @eve.EventDate.Day<br><span>@eve.EventDate.ToString("MMM")</span>
                                        </div>
                                    </div>



                                    <ul class="event-info">
                                        <li><span class="fa fa-calendar"></span> <span style="color: #fe5a5a ">@eve.EventDate.ToLongDateString()</span></li>
                                        <li> &emsp; <span class="fa fa-map-marker"></span> <span style="color: #fe5a5a ">@eve.Address</span></li>
                                    </ul>

                                    @if (eve.Description.Length > 1500)
                                    {
                                        <div class="flex-container">
                                            <div style="overflow: auto; scrollbar-face-color:brown; scrollbar-base-color:white; width: 768px; height: 400px; background-color: #f5e5d0; ">@eve.Description</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="flex-container">
                                            <div style=" width: 768px; height: auto; background-color: #f5e5d0; ">@eve.Description</div>
                                        </div>
                                    }



                                </div>
                            }
                        }

                    </div>

                </div>
            </div>
        </div>
    </div>


</section>

@section scripts{

    <script>


    </script>

}


