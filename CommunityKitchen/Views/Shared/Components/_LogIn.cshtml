
@{
    ViewBag.Title = "_LogIn";
}


<style>
    .signup-form,
    .login-form {
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%,-50%);
        background: rgb(252, 255, 255,0.7);
        border-radius: 42px;
        box-shadow: 10px 10px 42px rgb(0, 0, 0,0.2);
        transition: .5s;
        visibility: hidden;
        opacity: 0;
    }

        .signup-form::after,
        .login-form::after {
            content: '';
            position: absolute;
            top: 5px;
            left: 5px;
            right: 5px;
            bottom: 5px;
            border-radius: 42px;
            pointer-events: none;
            background: linear-gradient(to bottom,rgba(255,255,255,0.3)0%, rgba(255,255,255,0.1) 15%,transparent 50%,transparent 85%,rgba(255,255,255,0.3)100%);
        }

    .form {
        width: 500px;
        padding: 20px 50px;
    }

        .form .close {
            text-align: right;
            cursor: pointer;
        }

        .form .text h2 {
            color: #607d8b;
            font-weight: 600;
            font-size: 1.5em;
            text-transform: uppercase;
            margin-bottom: 20px;
            border-bottom: 4px solid #ff4584;
            display: inline-block;
            letter-spacing: 1px;
        }

        .form form {
            display: block;
            margin: auto;
        }

        .form .row {
            display: flex;
            justify-content: space-between;
        }

            .form .row input {
                margin-bottom: 20px;
            }

    .login-form .form .inputBx span {
        font-size: 16px;
        margin-bottom: 5px;
        display: inline-block;
        color: #607d8b;
        font-weight: 300;
        font-size: 16px;
        letter-spacing: 1px;
    }

    .form .inputBx input {
        width: 100%;
        display: block;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: transparent;
        border-radius: 12px;
        padding: 20px 16px;
        padding-left: 35px;
        margin: 20px auto;
        font-size: 16px;
        font-weight: 300;
        outline: none;
        box-shadow: inset 0 0 25px rgba(0, 0, 0, 0.2);
    }

        .form .inputBx input:hover {
            border-color: #ff2e3d;
            box-shadow: 0 0 8px 0 #ff2e3d;
            cursor: pointer;
        }

        .form .inputBx input:focus {
            border-color: #ff2e3d;
            box-shadow: 0 0 8px 0 #ff2e3d;
        }

    .inputBx a {
        text-decoration: none;
        color: #ff2e3d;
    }

        .inputBx a:hover {
            text-decoration: underline;
        }

    .inputBx img {
        position: relative;
        top: -66px;
        left: 4px;
        transform: scale(0.7);
        filter: drop-shadow(2px 3px 3px black);
    }

    .remeber {
        position: relative;
        display: inline;
        color: #607d8b;
        font-weight: 300;
        cursor: pointer;
        font-size: 25px;
    }

    input[type=checkbox] {
        margin: 5px;
        width: 18px;
        height: 18px;
        display: inline;
    }

    .login-form .form .sci {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .login-form .form .sci li {
            list-style: none;
            width: 50px;
            height: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            margin: 0 7px;
            cursor: pointer;
        }

            .login-form .form .sci li img {
                transform: scale(0.5);
            }

    #fb {
        width: 60px;
    }

    #in {
        width: 196px;
        display: inline;
        margin-bottom: 0px;
    }

    .login-form .form p,
    .signup-form .form p {
        color: #607d8b;
        font-weight: 300;
        font-size: 20px;
        margin-top: 5px;
    }

    #sub {
        color: #ff2e3d;
        transition: ease-out 0.4s;
        text-transform: uppercase;
    }

        #sub:hover {
            position: relative;
            background: #ff2e3d;
            font-size: 16px;
            font-weight: 400;
            border-radius: 12px;
            color: #ffffff;
            border: 1px solid #ff2e3d;
            text-transform: uppercase;
            padding: 20px 16px;
            transition: all .5s cubic-bezier(0.4, 0, 1, 1);
        }

    .signup-form.active,
    .login-form.active {
        top: 50%;
        transition: .5s;
        visibility: visible;
        opacity: 1;
        position: fixed;
    }

    .container23.active {
        filter: blur(20px);
        transition: .5s;
        pointer-events: none;
    }
</style>
<body>

    <div class="signup-form">
        <div class="form">
            <div class="close" onclick="signupToggle()">&times;</div>
            <div class="text">
                <h2>Register Form</h2>
            </div>
            <form action="#">
                <div class="inputBx">
                    <input id="in" type="text" placeholder="FirstName">
                    <input id="in" type="text" placeholder="Last Name">
                </div>
                <div class="inputBx">
                    <input type="email" placeholder="Email">
                    <input type="password" placeholder="Password">
                    <input type="password" placeholder="Confirm password">
                </div>
                <div class="inputBx">
                    <input id="sub" type="submit" value="Register">
                </div>
                <div class="inputBx">
                    <p>ALLRADY HAVE AN ACCOUNT?<a href="#">Sign in</a></p>
                </div>
            </form>
        </div>
    </div>
    <div class="login-form">
        <div class="form">
            <div class="close" onclick="loginToggle()">&times;</div>
            <div class="text">
                <h2>Login</h2>
            </div>
            <form action="#">
                <div class="inputBx">
                    <input type="email" placeholder="UserName">
                    <img src="https://img.icons8.com/ios-glyphs/30/000000/user--v1.png" />
                </div>
                <div class="inputBx">
                    <input type="password" placeholder="Password">
                    <img src="https://img.icons8.com/ios-glyphs/30/000000/password--v1.png" />
                </div>

                <label class="remeber"><input type="checkbox" name="">Remember me</label>

                <div class="inputBx">
                    <input id="sub" type="submit" value="Login">
                </div>
                <div class="inputBx">
                    <p>Forget<a href="#">Password</a></p>
                    <p>Dont have an account?<a href="#">Sign up</a></p>
                </div>
            </form>
            <p>Login with social media</p>
            <ul class="sci">
                <li><img id="fb" src="https://img.icons8.com/fluency/100/000000/facebook-new.png" /></li>
                <li><img src="https://img.icons8.com/color/48/000000/twitter--v1.png" /></li>
                <li><img src="https://img.icons8.com/color/48/000000/instagram-new--v1.png" /></li>
            </ul>
        </div>
    </div>





    <script>
        function signupToggle() {
            var container = document.querySelector('.container23');
            container.classList.toggle('active');
            var popup = document.querySelector('.signup-form');
            popup.classList.toggle('active');
        }
        function loginToggle() {
            var container = document.querySelector('.container23');
            container.classList.toggle('active');
            var popup = document.querySelector('.login-form');
            popup.classList.toggle('active');
        }

    </script>

</body>


