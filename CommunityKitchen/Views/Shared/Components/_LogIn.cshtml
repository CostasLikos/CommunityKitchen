@{
    ViewBag.Title = "_LogIn";
}

<body>

    <div class="signup-form">
        <div class="form">
            <div class="close" onclick="signupToggle()">&times;</div>
            <div class="text">
                <h2>Register Now</h2>
            </div>
            <form method="post" action="/Account/Register">
                @Html.AntiForgeryToken()

                <div class="inputBx">
                    <input id="in" type="text" name="FirstName" required placeholder="First Name">
                    <input id="in" type="text" name="LastName" required placeholder="Last Name">
                </div>
                <div class="img1">
                    <img src="https://img.icons8.com/ios-glyphs/30/000000/user--v1.png" />
                </div>
                <div id="img1">
                    <img src="https://img.icons8.com/ios-glyphs/30/000000/user--v1.png" />
                </div>
                <div class="inputBx">
                    <input onchange="UserCheck()" id="Email" type="email" name="Email" placeholder="Email" required>
                    <p id="stat"></p>
                    <div class="img2">
                        <img src="https://img.icons8.com/external-nawicon-glyph-nawicon/64/000000/external-email-communication-nawicon-glyph-nawicon.png" />
                    </div>
                    <input id="password" type="password" name="Password" placeholder="Password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[A-Za-z\d$!%*?&]{6,}$"
                           title="Must contain at least one number, one uppercase letter and one special character, minimum 6 characters" required>
                    <input id="confpassword" type="password" name="ConfirmPassword" placeholder="Confirm password" minlength="6">
                    <div class="img4">
                        <img src="https://img.icons8.com/ios-glyphs/30/000000/password--v1.png" />
                        <img src="https://img.icons8.com/ios-glyphs/30/000000/password--v1.png" />
                    </div>
                    <div class="inputBx">
                        <input id="sub" type="submit" value="Register">
                    </div>
                    <div class="inputBx">
                        <p>Already Have An Account? <a onclick="signinToggle()" href="#">Sign in</a></p>
                    </div>
                </div>
            </form>
            <form action="/Account/ExternalLogin" method="post">
                @Html.AntiForgeryToken()
                <div id="socialLoginList">
                    <div class="inputBx">
                        <p>Login using other accounts <i type="submit" class="btn btn-default" style="color:brown;" id="Google" name="provider" value="Google" title="Log in using your Google account">Google</i></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="login-form">
        <div class="form">
            <div class="close" onclick="loginToggle()">&times;</div>
            <div class="text">
                <h2>Login</h2>
            </div>
            <form method="post" action="/Account/Login">
                @Html.AntiForgeryToken()
                <div class="inputBx">
                    <input type="text" name="Email" placeholder="Username">
                    <img src="https://img.icons8.com/ios-glyphs/30/000000/user--v1.png" />
                </div>

                <div class="inputBx">
                    <input type="password" name="Password" placeholder="Password">
                    <img src="https://img.icons8.com/ios-glyphs/30/000000/password--v1.png" />
                </div>

                <label class="remember"><input type="checkbox" value="true" name="RememberMe">Remember me</label>

                <div class="inputBx">
                    <input id="sub" type="submit" value="Login">
                </div>
                <div class="inputBx">
                    <p>Forgot your <a href="#">Password?</a></p>
                    <p>You don't have an account?  <a onclick="registerToggle()" href="#" style="">Sign Up</a></p>
                </div>
                <p>Login using other accounts</p>
            </form>
            
                <form action="/Account/ExternalLogin" method="post">
                    @Html.AntiForgeryToken()
                    <div id="socialLoginList">
                        <div class="inputBx">
                            <button type="submit" class="btn btn-default" style="color:brown;" id="Google" name="provider" value="Google" title="Log in using your Google account">Google</button>
                        </div>
                    </div>
                </form>
            
            
        </div>
    </div>




    <script>

             function UserCheck() {
            $("#stat").html("Checking...");
            $.post("@Url.Action("CheckUsernameAvailability", "ApplicationUser")",
            {
                    userdata: $("#Email").val()
            },
            function (data) {
                if (data == 0) {
                    $("#stat").html('<font color="darkgreen">Username Available </font>');
                }
                else {
                    $("#stat").html('<font color="Red">Username Already Exists </font>');
                }

                })
            }




        var password = document.getElementById("password");
        var confirmpassword = document.getElementById("confpassword");
        var message = document.getElementById("message");
        function validatePassword() {
            if (password.value != confirmpassword.value) {
                confirmpassword.setCustomValidity("Passwords Don't Match");
            }
            else {
                confirmpassword.setCustomValidity('');
            }
        }
        password.onchange = validatePassword;
        confirmpassword.onkeyup = validatePassword;
    </script>

</body>


